{
  "css.validate": false,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "[css]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  // Tailwind CSS Autocomplete, add more if used in projects
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "classNames",
    "containerClassName"
  ],
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#4c5763",
    "activityBar.background": "#4c5763",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#cf709d",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#4c5763",
    "statusBar.background": "#363e46",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#4c5763",
    "statusBarItem.remoteBackground": "#363e46",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#363e46",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#363e4699",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#363E46"
}
